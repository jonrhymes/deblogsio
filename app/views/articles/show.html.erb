<div style="width:50%;background:#9ce6ff;padding:30px;">
    <p>
    <strong>Title:</strong>
    <%= @article.title %>
    </p>

    <p>
    <strong>Blog Post:</strong>
    <%= @article.text %>
    </p>
</div>
    

<h2>Comments</h2>
<%= render @article.comments %>

