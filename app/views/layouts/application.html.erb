<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="text-center">
    <main role="main" class="container">
      <div class="row">
        <div class="col">

          <%= yield %>
        
        </div>
      </div>
    </main>
      <footer class="footer", style="bottom:0;width:100%;height:60px;line-height:60px;background-color:#f5f5f5;">
        <div class="container">
          <span class="text-muted"><h3>Made with <%= link_to "Ruby on Rails", "https://rubyonrails.org/" %> and <%= link_to "Bootstrap", "https://getbootstrap.com/" %></h3></span>
        </div>
      </footer>
  </body>
</html>
